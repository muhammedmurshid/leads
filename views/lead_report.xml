<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="leads_report_excel_report" model="ir.ui.view">
        <field name="name">lead.report.form</field>
        <field name="model">lead.report</field>
        <field name="arch" type="xml">
            <form string="Report">
                <group class="oe_title">
                    <field name="date_from" placeholder="Report From Date"/>
                    <field name="to_date" placeholder="Report To Date"/>
                    <field name="datas_ids" widget="many2many_tags" invisible="1"/>
                    <field name="report_type"/>
                </group>
                <footer>
                    <button name="print_xlsx_report" type="object" string="Source Wise Report" class="btn-primary" attrs="{'invisible': [('report_type', '!=', 'fully_report')]}"/>
                    <button name="print_without_crash_xlsx_report" string="Source Wise Report" type="object" class="btn-primary" attrs="{'invisible': [('report_type', '!=', 'without_crash')]}"/>
                    <button name="print_xlsx_report_course" type="object" string="Course Wise Report" class="btn-primary" attrs="{'invisible': [('report_type', '!=', 'fully_report')]}"/>
                    <button name="print_xlsx_without_crash_report_course" type="object" string="Course Wise Report" class="btn-primary" attrs="{'invisible': [('report_type', '!=', 'without_crash')]}"/>
                    <button name="print_xlsx_crash_report_course" type="object" string="Course Crash Report" class="btn-primary" attrs="{'invisible': [('report_type', '!=', 'only_crash')]}"/>
                    <button name="print_crash_xlsx_report" string="Source Crash Report" type="object" class="btn-primary" attrs="{'invisible': [('report_type', '!=', 'only_crash')]}"/>
                    <button name="print_xlsx_digital_report" class="btn-primary" string="Digital Report" type="object" attrs="{'invisible': [('report_type', '!=', 'fully_report')]}"/>
                    <button name="print_crash_digital_xlsx_report" class="btn-primary" string="Digital Report with Crash" type="object" attrs="{'invisible': [('report_type', '!=', 'only_crash')]}"/>
                    <button name="print_without_crash_digital_xlsx_report" class="btn-primary" string="Digital Report Without Crash" type="object" attrs="{'invisible': [('report_type', '!=', 'without_crash')]}"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="lead_report_action" model="ir.actions.act_window">
        <field name="name">Lead Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lead.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="leads_report_excel_report"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Reports" id="menu_leads_report" action="lead_report_action"
              parent="menu_leads_details" sequence="10" groups="leads.leads_admin"/>
</odoo>